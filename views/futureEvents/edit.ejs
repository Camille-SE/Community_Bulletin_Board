<header>
    <h1>Edit <%= foundFutureEvent.title %>'s Info</h1>
    <nav>
        <ul>
            <li>
                <a href="/">Home</a>
            </li>
            <li>
                <a href="/futureEvents">Future Events</a>
            </li>
        </ul>
    </nav>
</header>
<main>
    <h2>Future Events Edit:</h2>
    <form action="/futureEvents/<%= foundFutureEvent._id %>?_method=PUT"  method="POST">
        Title Of Event: <input type="text" name="title" value="<%= foundFutureEvent.title %>" /><br/>
        Location: <input type="text" name="location" value="<%= foundFutureEvent.location %>"/><br/>
        Date: <input type="date" name="date" value="<%= foundFutureEvent.date %>"/><br/>
        Cost: <input type="text" name="cost" value="<%= foundFutureEvent.cost %>"/><br/>
        Details: <textarea name="body"><%= foundFutureEvent.body %></textarea><br/>
        Image Url: <input type="url" name="img" value="<%= foundFutureEvent.img %>"><br/>
        <input type="submit" value="Edit Event">
    </form>
</main>